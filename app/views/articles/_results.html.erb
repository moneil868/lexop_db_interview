<section aria-labelledby="articles-heading" class="mt-6 lg:col-span-4 lg:mt-0">
  <h2 id="articles-heading" class="sr-only">Articles</h2>
  <div class="py-2 align-middle md:px-6 lg:px-8">
    <div class="min-h-table-min flex flex-col justify-between">
      
      <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <% @articles.each do |article| %>
          <li class="relative group rounded-lg bg-gray-800 text-white shadow p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
            <%= link_to article_path(article.slug), class:"text-sm font-medium", :data => { turbo_frame: 'modal' } do %>
              <div class="pt-8 h-full relative flex flex-col justify-between"> 
                <div class="absolute top-0 text-xs font-semibold">
                  <span class="bg-gradient-to-r from-purple-300 to-indigo-300 bg-clip-text text-transparent">
                    <%= article.category.upcase %>
                  </span>
                </div>
                <div>
                  <p class="mt-3 text-sm font-medium underline">
                    <%= article.author %>
                  </p> 
                  <h3 class="mt-1">
                    <span class="absolute inset-0 " aria-hidden="true"></span>
                    <span class="text-2xl font-semibold tracking-tight text-white">
                      <%= article.title %>
                    </span>
                  </h3>
                </div>
                <div class="mt-3 text-base text-gray-300">
                  <%= simple_format article.excerpt %>
                </div>
                <div class="mt-5 flex justify-between">
                  <p class="text-xs font-medium">
                    <%= article.publication_date.strftime("%a %d, %b %Y") %>
                  </p> 
                  <p class="text-xs font-medium">
                    <%= article.total_likes %> likes
                  </p>
                </div>                    
              </div>
              <span class="pointer-events-none absolute top-6 right-6 text-gray-300 group-hover:text-gray-400" aria-hidden="true">
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4h1a1 1 0 00-1-1v1zm-1 12a1 1 0 102 0h-2zM8 3a1 1 0 000 2V3zM3.293 19.293a1 1 0 101.414 1.414l-1.414-1.414zM19 4v12h2V4h-2zm1-1H8v2h12V3zm-.707.293l-16 16 1.414 1.414 16-16-1.414-1.414z" />
                </svg>
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>

      <nav class="mt-5 px-4 py-5 flex rounded-lg items-center justify-between bordersm:px-6 -ml-px -mr-px" aria-label="Pagination">
        <div class="hidden sm:block">
          <p class="text-sm text-gray-700">
            <%= page_entries_info @articles, entry_name: 'articles' %> 
          </p>
        </div>
        <div class="flex-1 flex justify-start sm:justify-end">
          <%= link_to_prev_page @articles, 'Previous', 
            :class => "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>

          <%= link_to_next_page @articles, 'Next', 
            :class => "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </nav>
    </div>
  </div>
</section>
