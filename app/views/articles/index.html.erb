<div class="mx-auto max-w-2xl px-4 lg:max-w-7xl lg:px-8">
  <div class="border-b border-gray-200 pt-24 pb-10">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">Articles</h1>
    <p class="mt-4 text-base text-gray-500">
      Navigate news articles using previous, next buttons below. Filter news articles by Category, Author, or both.
    </p>
  </div>

  <div class="pt-12 pb-24 lg:grid lg:grid-cols-5" data-controller="url">
    
    <% unless @articles&.empty? %>
      <%= render 'filters' %>
    <% end %>

    <% unless @articles&.empty? %>
      <%= render 'results' %>
    <% else %>
      <%= render 'empty' %>
    <% end %>
  </div>
</div>
